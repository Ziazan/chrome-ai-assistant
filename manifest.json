{
    "name": "chrome-ai-plugin",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "contextMenus",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
       {
         "matches": ["http://*/*","https://*/*"],
         "js": ["content_script.js"]
       }
     ]
  }